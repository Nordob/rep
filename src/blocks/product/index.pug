mixin productCard(product)
  .product
    if product.veg
      .veg
        p veg
    if product.hit
      .hit
        p хит
    .product__photo
      img.product__image(src=product.icon, alt=product.title)
    .product__block
      .product__name= product.name
      if product.supplements
        .product__supplements
          .product__settings
            | Добавить:
            .product__howmuch
              .product__howmuches +0
              button.product__cancellation x
            .product__pricetag
              .product__pricetags
                span 0
                |  руб.
              button.product__add +
          .product__sauces
            select
      .product__info
        if product.size
          .product__size= product.size
        if product.weight
          .product__weight #{product.weight} г.
        if product.calories
          .product__calories #{product.calories} Kkal
      .product__order
        .product__price #{product.price} руб.
        .product__quantity
          button.product__less -
          input.product__input(value=1 disabled=true)
          button.product__more +
      button.product__button( type="button")
